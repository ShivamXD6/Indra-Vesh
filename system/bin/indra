#!/system/bin/sh

# Load mod-util.sh
source mod-util.sh || exit $?
 
# Menu
Menu() {
    echo -e '\n'
    printf "\033c"
    
    indc "${C} ✦✧✦✧✦✧✦✧✦✧ Indra Vesh - Command Center ✧✦✧✦✧✦✧✦✧✦ ${N}"
    indc "${W} ✶ Welcome to Indra-Vesh - Menu ${N}"
    indc "${W} ✶ Created & Written By @ShastikXD ${N}"
    indc "${W} ✶ Version = VAJRA ${N}"
    indc "${Y} ✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦ ${N}"
    indc "${W} ❐ [1] Binary Lever ${N}"
    indc "${W} ❐ [2] Custom Forge ${N}"
    indc "${W} ❐ [3] Magic Kit ${N}"
    indc "${W} ❐ [4] Configuration ${N}"
    indc "${W} ❐ [5] Updater ${N}"
    indc "${R} ✖ [0] Exit ${N}"
    indc "${Y} ✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦✧✦ ${N}"
    indc "${C} ✷ Enter Number Respective to its Menu:  ${N}"
    read option
    case $option in
        1) Option1 ;;
        2) Option2 ;;
        3) Option3 ;;
        4) Option4 ;;
        5) Option5 ;;
        0) GoOut ;;
        *) Menu ;;
    esac    
    }

Option1 () {
    printf "\033c"
    source /$DB/Scripts/bls
}

Option2 () {
    printf "\033c"
    source /$DB/Scripts/cfs
}

Option3 () {
    printf "\033c"
    source /$DB/Scripts/mks
}

Option4 () {
    printf "\033c"
    source /$DB/Scripts/cfgs
}

Option5 () {
    printf "\033c"
    source /$DB/Scripts/upd
}

Reboot() {
    printf "\033c"
    reboot system
    printf "\033c"
}

GoOut() {
    printf "\033c"
    ind "${G} ✓ All Done, See You next Time.${N}"
    exit
}

printf "\033c"
Menu